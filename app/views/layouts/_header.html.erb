    <div class="row">
      <div class="col-4">
        <% if current_user %>
          <div class="dropdown" data-current-user-id = "<%= current_user.id %>">
            <a href = "#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.nickname  %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Channels", channels_path, method: :get %></li>
              <li><%= link_to "Users", users_path, method: :get %></li>
              <li class="devider"></li>
              <li><%= link_to "Log out", sessions_path, method: :delete %></li>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="col-6">
      </div>
      <div class='col-2'>
      </div>
    </div>
  </div>
