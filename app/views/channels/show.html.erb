
<h1><%= @channel.title %></h1>

<div id="messages" data-channel-id="<%= @channel.id %>">
  <% if @messages.present? %>
    <% @messages.each do |message| %>
    <div>
        <span><%= message.user.nickname %>: <%= message.text %></span>
    </div>
    <% end %>
  <% else %>
  <div id='empty_chat'> Сообщений в чате нет </div>
  <% end %>
</div>
<br>

<div id='new_message_form'>
<%= form_with(model: @message, url: messages_path(@message)) do |message_form| %>
<%= message_form.label :text, "Введите сообщение"%>
<%= message_form.text_field :text %>
<%= message_form.hidden_field :channel_id, value: @channel.id %>
<%= message_form.submit %>
<% end %>
</div>
<br>
<div>
  <%= link_to 'Покинуть канал', channels_path, method: :get %>
</div>
