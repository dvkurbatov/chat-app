<div class="container">
  <div class="row">
    <div class='col-10 align-self-center">'>
      <%= form_with(model: @user, url: sessions_path) do |form| %>
        <div class="form-group">
          <%= form.label :nickname, 'Никнейм'%>
          <%= form.text_field :nickname, class: 'form-control', placeholder: 'Введите никнейм'%>
        </div>
        <%= form.button 'Подтвердить', class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>
